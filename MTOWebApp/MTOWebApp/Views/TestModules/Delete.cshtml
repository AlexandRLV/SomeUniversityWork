@model MTOWebApp.Data.TestModule

@{
    ViewData["Title"] = "Удалить тестирование";
}

<h3>Удалить это тестирование?</h3>
<div>
    <h4>Тестирование по модулю @Model.TheoryModule.Name</h4>
    <hr />
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-default" />
        <br />
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
