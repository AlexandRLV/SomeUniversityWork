@model MTOWebApp.Data.Paragraph

@{
    ViewData["Title"] = "Удалить параграф";
}

<h3>Удалить @Model.Name?</h3>

<hr />
<div>
    <dl class="dl-horizontal">
        <dd>
            <h3>@Model.Name</h3>
        </dd>
        <dd>
            @ViewData["Data"]
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        <a asp-controller="TheoryModules" asp-action="Details" asp-route-id="@Model.TheoryModule.Id">К теме</a>
    </form>
</div>
